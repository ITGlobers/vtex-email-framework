<table class="w-100" border="0" cellpadding="0" cellspacing="0">
  {{#each items}}
  <tr>
    <td class="v-top pv3 bb b--light-gray">
      <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td class="v-top w3 pr3">
            <a href="{{link}}" title="{{productName}}">
              <img src="{{image}}" alt="{{productName}}" width="100">
            </a>
          </td>
          <td class="v-top">
            <div class="f5 lh-title mv1-ns">{{productName}}</div>
            <div class="gray">
              ((i18n.common.quantity)): {{quantity}}
            </div>
          </td>
          <td class="v-top tr">
            <div class="f5 lh-title mv1-ns">((i18n.common.currency)) {{formatCurrency (math sellingPrice '*' 100)}}</div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  {{/each}}
</table>
