<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional //EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:o="urn:schemas-microsoft-com:office:office" xmlns:v="urn:schemas-microsoft-com:vml">
  <!-- partial:partials/html-head.hbs --><!-- partial -->
	<body>
		<table id="body-table" width="100%" border="0" cellpadding="0" cellspacing="0">
			<tr>
				<td align="center" valign="top">
					<table class="w-100 mw6-5 mv4-ns bg-white" width="100%" align="center" border="0" cellpadding="0" cellspacing="0">

            <!-- Header -->
            <tr>
              <td class="w-100 ph4-ns pb4 bb b--light-gray tc">
                <!-- partial:partials/logo.hbs --><!-- partial -->

                <h1>((i18n.refund.title)) {{orderId}}</h1>
              </td>
            </tr>

						<tr>
							<td class="w-100 ph4-ns pt2 pb4 bt b--light-gray">
                <p>((i18n.refund.introMessage))</p>

                <h3>((i18n.refund.refundedItems))</h3>
                <table width="100%" border="0" cellpadding="0" cellspacing="0">
                  <tbody>
                    {{#each package.restitutions.Refund.items}}
                      {{#with (lookup ../items @index)}}
                        <tr>
                          <td class="v-top pv2 w3 pr2"><img alt="" src="{{imageUrl}}" /></td>
                          <td class="v-top pv2">
                            <div class="f5 lh-title mv1-ns">{{name}}</div>
                            <div class="gray">
                              {{../quantity}} ((i18n.common.units))
                              {{#if ../price}}
                                ((i18n.common.currency)) {{formatCurrency ../price}}
                              {{else}}
                                ((i18n.common.free))
                              {{/if}}
                            </div>
                          </td>
                        </tr>
                      {{/with}}
                    {{/each}}
                  </tbody>
                </table>

                <h3>((i18n.refund.refundAmount))</h3>
                <p>((i18n.common.currency)) {{formatCurrency package.restitutions.Refund.value}}</p>

							</td>
						</tr>

            <tr>
              <td class="ph4-ns pv3 bt b--light-gray">
                <!-- partial:partials/messages/regards.hbs --><!-- partial -->
              </td>
            </tr>
					</table>
				</td>
			</tr>
		</table>
	</body>
</html>